root = true

# config for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 80

# config for JSON and YAML
[*.{json, xml, yml}]
indent_size = 2

# shell script
[*.sh]
indent_size = 2

# config for Markdown
[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
