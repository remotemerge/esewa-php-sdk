root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

[*.php]
indent_size = 4

[*.{md,xml}]
max_line_length = off

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false
